{
  "name": "estagiando",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npx tailwindcss -i ./src/input.css -o ./public/css/output.css --watch",
    "prod": "npx tailwindcss -i ./src/input.css -o ./public/css/output.css --minify",
    "serve": "browser-sync start --proxy \"localhost\" --files \"./**/*.php, ./public/css/*.css, ./public/js/*.js\"",
    "dev": "concurrently \"npm run build\" \"npm run serve\""
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14"
  }
}
